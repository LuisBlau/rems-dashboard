{
    "settings": {
        "react": {
            "pragma": "React",
            "fragment": "Fragment",
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "next"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest",
        "prettier",
        "react-hooks"
    ],
    "rules": {
        "eqeqeq": "warn",
        "no-console": "warn",
        "prettier/prettier": "off",
        "react/display-name": "off",
        "react/no-children-prop": "off",
        "react/react-in-jsx-scope": "off",
        "react-hooks/rules-of-hooks": "warn",
        "react-hooks/exhaustive-deps": "warn",
        "no-unused-vars": "warn"
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
        "node_modules",
        "build",
        "dist",
        "public"
    ]
}